<%= render @review %>
<div id="error_messages"></div>
<div id="comments">
  <div id="comment_count">
    <%= pluralize @review.comments.count, t("comment.comment") %>
  </div>
  <div id="comment_<%= @review.id %>" class="col-sm-10 col-sm-offset-1">
    <%= render @review.comments, review: @review if @review.comments.any? %>
  </div>
  <% if user_signed_in? %>
    <div class="comment-form col-sm-10 col-sm-offset-1" id="comment-form">
      <%= render "shared/comment_form", review: @review %>
    </div>
  <% end %>
</div>
