<%= render "shared/error_messages", object: anime %>

<%= form_for [:admin, anime], html: {multipart: true} do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category_id, categories.collect{|p| [p.name, p.id]},
      {include_blank: false}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, status.collect{|key, value| [t(key), key]},
      {include_blank: false}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :episode %>
    <%= f.number_field :episode, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :publish_year %>
    <%= f.text_field :publish_year, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, onChange: "loadFile(event)" %>
  </div>

  <%= f.submit t(:create), class: "btn btn-primary" %>
<% end %>
