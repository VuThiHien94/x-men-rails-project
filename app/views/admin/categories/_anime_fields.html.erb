<div class="product_fields">
  <div class="fieldset panel panel-default">
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :episode %>
        <%= f.number_field :episode, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :status %>
        <%= f.select :status, @status.collect{|key, value| [t(key), key]},
          {include_blank: false}, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :publish_year %>
        <%= f.text_field :publish_year, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, onChange: "loadFile(event)" %>
      </div>

      <%= f.hidden_field :_destroy %>
      <%= link_to t("anime.remove"), "#", class: "remove_fields btn
        btn-primary" %>
    </div>
  </div>
</div>
