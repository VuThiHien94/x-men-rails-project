<div class="container">
  <div id="anime-<%= anime.id %>" class="anime-show">
    <div class="row">
      <div class="col-xs-4 col-sm-3">
        <%= image_tag anime.image.url, alt: "Anime image", width: 125, height: 125 %>
      </div>
      <div class="col-xs-4 col-sm-9 title">
        <%= link_to anime.title, anime %>
      </div>
    </div></br>
    <div class="row">
      <div class="col-xs-4 col-sm-8">
        <b><%= t "anime.description" %>:</b>
        <div class="description">
         </br><%= t "anime.category" %>:
          <%= anime.category.name %>
        </div>
        <div class="description">
          <%= t "anime.publish_year" %>:
          <%= anime.publish_year %>
        </div>
        <div class="description">
          <%= t "anime.episode" %>:
          <%= anime.episode %>
        </div>
        <div class="description">
          <%= t "anime.status" %>:
          <%= anime.status %>
        </div>
        <div class="description">
          <%= anime.description %>
        </div>
        <div id="review_count" class="description">
          <%= pluralize anime.reviews.count, t("review") %>
        </div>
      </div>
      <div class="col-xs-4 col-sm-4">
        <b><%= t "anime.rating" %>:</b>
        <%= anime.reviews.average :rate %>
        <%= image_tag "/assets/star-icon-32.png", alt: "Anime image", width: 18, height: 18 %>
        </br><%= I18n.translate "anime.count_rater", count: anime.reviews.count %>
      </div>
    </div>
  </div>
  <% unless current_user.review_anime?(anime.id).present? %>
    <button data-toggle="collapse" data-target="#review_form" class="btn btn-default buttom">
      <%= t "anime.newreview" %>
    </button>
    <div id="review_form" class="collapse buttom">
      <section>
        <%= render "shared/review_form", anime: anime %>
      </section>
    </div>
  <% end %>
    <div id="reviews_<%= anime.id %>">
      <%= render @reviews, anime: anime if anime.reviews.any? %>
    </div>
</div>
