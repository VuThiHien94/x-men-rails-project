<div id="anime-<%= anime.id %>" class="anime">
  <div class="each-anime">
    <%= image_tag anime.image.url, alt: "Anime image", width: 150,
      class: "pull-left" %>
    <div class="right">
      <%= link_to anime.title, anime %>
      <span style="margin-left: 50px; font-size: 16px;">
        <%= anime.reviews.average(:rate) ? anime.reviews.average(:rate) : 0 %>
        <%= image_tag "/assets/star-icon-32.png", alt: "Anime image", width: 25, height: 25 %>
      </span>
    </div>
    <div class="right">
      <%= t "anime.category" %>:
      <%= anime.category.name %>
    </div>
    <div class="right">
      <%= t "anime.description" %>:
      <%= anime.description %>
    </div>
    <div id="review_count" class="right">
      <% reviews = anime.reviews %>
      <%= pluralize reviews.count, t("review.review") %><%= reviews.last ? " ( last review at: #{reviews.last.created_at.strftime("%d-%m-%Y")} )" : "" %>
    </div>
  </div>
</div>
