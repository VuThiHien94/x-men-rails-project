<div id="anime-<%= anime.id %>" class="anime">
  <div class="each-anime">
    <%= image_tag anime.image.url, alt: "Anime image", width: 150,
      class: "pull-left" %>
    <div class="right">
      <%= link_to anime.title, anime %>
      <span style="margin-left: 50px;">
        <%= anime.reviews.average(:rate) ? anime.reviews.average(:rate) : 0 %>
        <%= image_tag "/assets/star-icon-32.png", alt: "Anime image", width: 18, height: 18 %>
      </span>
    </div>
    <div class="right">
      <%= t "anime.category" %>:
      <%= anime.category.name %>
    </div>
    <div class="right">
      <%= t "anime.description" %>:
      <%= anime.description %>
    </div>
    <div id="review_count" class="right">
      <%= pluralize anime.reviews.count, t("review.review") %>
    </div>
  </div>
</div>
